<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
   <link rel="stylesheet" href="/css/layout.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/footer.css">

   <%- style %>
  </head>
  <body>
    <%- include('_header'); %>

    <!-- <% if(flash.success && flash.success.length >0){%>
        <h5>
          <%= flash.success %>
        </h5>
    <%}%> -->

    <!-- the below tag will fill the data in the layout -->
    <!-- means we have created these layout and the varioable part is body so whatever we will ad
    in our home .ejs or userprofilee.js that data will be rendered in body -->
      <main id="layout-main">

        <%- body %> 

      </main>



    </body>
  <%- include('_footer'); %>
  <%- script %>

  <script>
    <% if(flash.success && flash.success.length>0){%>
      new Noty({
        theme:'relax',
        text: "<%= flash.success %>",
        type:'success',
        layout:'topRight',
        timeout: '1500'


    
    }).show();
    <%}%>
    <% if(flash.error && flash.error.length>0){%>
      new Noty({
        theme:'relax',
        text: "<%= flash.error %>",
        type:'error',
        layout:'topRight',
        timeout: '1500'
    
    }).show();
    <%}%>
  </script>
</html>
